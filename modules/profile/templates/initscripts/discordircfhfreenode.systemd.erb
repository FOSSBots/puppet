# Managed By Puppet
[Unit]
Description=Discord-IRC (Fosshost)
Documentation=https://github.com/reactiflux/discord-irc
After=network-online.target

[Service]
Type=simple
WorkingDirectory=/discord-irc
User=relays
PIDFile=/discord-irc/%I.pid
ExecStart=npm start -- --config /discord-irc/fhfreenodeconfig.json
Restart=on-failure
RestartPreventExitStatus=2
RestartSec=30
Environment=LC_ALL=en_US.UTF-8

[Install]
WantedBy=multi-user.target
